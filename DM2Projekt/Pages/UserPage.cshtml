@page
@model DM2Projekt.Pages.UserPageModel
@{
    ViewData["Title"] = "User Profile";
}

<div class="container py-4">
    <h2 class="mb-3">User Profile</h2>

    <!-- Profile Details -->
    <div class="mb-4">
        <h4>@Model.User.FirstName @Model.User.LastName</h4>
        <p>Email: @Model.User.Email</p>
        <p>Password: **hidden**</p>
    </div>

    <!-- Bookings -->
    <h3>Your Bookings</h3>
    @if (Model.Bookings.Any())
    {
        <div class="list-group mb-4">
            @foreach (var booking in Model.Bookings)
            {
                <a class="list-group-item list-group-item-action">
                    <h5>@booking.Room.RoomName</h5>
                    <p>@booking.StartTime?.ToString("ddd, dd MMM yyyy HH:mm") - @booking.EndTime?.ToString("HH:mm")</p>
                    <p>Group: @booking.Group.GroupName</p>
                </a>
            }
        </div>
    }
    else
    {
        <p>No bookings found.</p>
    }

    <!-- Group Memberships -->
    <h3>Your Groups</h3>
    @if (Model.Groups.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 g-4">
            @foreach (var group in Model.Groups)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@group.GroupName</h5>
                            <p class="card-text">Click to view more about this group.</p>
                            <a asp-page="/Groups/Details" asp-route-id="@group.GroupId" class="btn btn-primary">View Group</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-muted">You are not a member of any groups.</p>
    }
