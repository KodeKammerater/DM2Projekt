@page
@model DM2Projekt.Pages.UserPageModel
@{
    ViewData["Title"] = "User Profile";
}

<div class="container py-4">
    <h2 class="mb-4">User Profile</h2>

    <!-- Profile Card -->
    <div class="card shadow-sm mb-4">
        <div class="card-body d-flex align-items-center">
            <div class="me-3">
                <i class="bi bi-person-circle" style="font-size: 3rem; color: #6c757d;"></i>
            </div>
            <div>
                <h4 class="card-title mb-1">@Model.User.FirstName @Model.User.LastName</h4>
                <p class="mb-1"><i class="bi bi-envelope"></i> @Model.User.Email</p>
                <p class="mb-0 text-muted"><i class="bi bi-shield-lock"></i> Password: <em>hidden</em></p>
            </div>
        </div>
    </div>
</div>

<!-- Bookings -->
<h3 class="mt-4">Your Bookings</h3>

@if (Model.Bookings.Any())
{
    <div class="row">
        @foreach (var booking in Model.Bookings)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@booking.Room.RoomName</h5>
                        <p class="card-text mb-1">
                            <strong>Time:</strong><br />
                            @booking.StartTime?.ToString("ddd, dd MMM yyyy HH:mm") – @booking.EndTime?.ToString("HH:mm")
                        </p>
                        <p class="card-text mb-3">
                            <strong>Group:</strong> @booking.Group.GroupName
                        </p>
                        <a href="?bookingId=@booking.BookingId" class="btn btn-primary mt-auto">View details</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p class="text-muted">No bookings found.</p>
}

@if (Model.SelectedBooking != null)
{
    <div class="card mt-4 border-info">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0">Booking Details</h5>
        </div>
        <div class="card-body">
            <p><strong>Room:</strong> @Model.SelectedBooking.Room.RoomName</p>
            <p>
                <strong>Time:</strong>
                @Model.SelectedBooking.StartTime?.ToString("dddd, dd MMM yyyy HH:mm") –
                @Model.SelectedBooking.EndTime?.ToString("HH:mm")
            </p>
            <p><strong>Group:</strong> @Model.SelectedBooking.Group.GroupName</p>
            <p><strong>Created by:</strong> @Model.SelectedBooking.CreatedByUser.FirstName @Model.SelectedBooking.CreatedByUser.LastName</p>

            <div class="d-flex gap-2 mt-3">
                <!-- Delete booking -->
                <form method="post" asp-page-handler="Delete" asp-route-bookingId="@Model.SelectedBooking.BookingId">
                    <button type="submit" class="btn btn-danger">Delete booking</button>
                </form>

                <!-- Close details -->
                <a href="/UserPage" class="btn btn-outline-secondary">Close details</a>
            </div>
        </div>
    </div>
}
    <!-- Group Memberships -->
    <h3>Your Groups</h3>
    @if (Model.Groups.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 g-4">
            @foreach (var group in Model.Groups)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@group.GroupName</h5>
                            <p class="card-text">Click to view more about this group.</p>
                            <a asp-page="/Groups/Details" asp-route-id="@group.GroupId" class="btn btn-primary">View Group</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-muted">You are not a member of any groups.</p>
    }
